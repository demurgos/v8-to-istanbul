{
  "name": "v8-to-istanbul",
  "version": "1.2.0",
  "description": "convert from v8 coverage format to istanbul's format",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "scripts": {
    "lint": "tslint --project src/lib/tsconfig.json",
    "generate-fixtures": "ts-node tools/generate-fixtures.ts",
    "posttest": "standard",
    "prepare": "tsc --project src/lib/tsconfig.json",
    "release": "standard-version",
    "snapshot": "TAP_SNAPSHOT=1 tap src/test/*.ts",
    "test": "nyc mocha --require ts-node/register \"./src/test/**/*.spec.ts\"",
    "test-tap": "tap src/test/*.ts --cov"
  },
  "repository": {
    "url": "git@github.com:bcoe/v8-to-istanbul.git"
  },
  "files": [
    "build/lib",
    "CHANGELOG.md",
    "LICENSE.txt",
    "README.md"
  ],
  "keywords": [
    "istanbul",
    "v8",
    "coverage"
  ],
  "standard": {
    "ignore": [
      "build",
      "**/test/fixtures"
    ]
  },
  "author": "Ben Coe <ben@npmjs.com>",
  "contributors": [
    "Charles Samborski <demurgos@demurgos.net>"
  ],
  "license": "ISC",
  "dependencies": {
    "@babel/types": "^7.0.0-beta.56",
    "devtools-protocol": "0.0.579242"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.6",
    "chrome-remote-interface": "^0.26.1",
    "mocha": "^5.2.0",
    "should": "^13.1.3",
    "standard": "^11.0.1",
    "standard-version": "^4.2.0",
    "tap": "^12.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "include": [
      "src/lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  }
}
